<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General"
        android:key="general">
        <ListPreference
            android:title="Select your Currency"
            android:key="currency"
            android:summary="Default:Rupees"
            android:entries="@array/currency_list"
            android:entryValues="@array/currency_listValues"
            />
        <ListPreference
            android:title="Select Max Group Count"
            android:key="peoplecount"
            android:summary="Default:10"
            android:entries="@array/People_Count"
            android:entryValues="@array/People_CountValues"
            />

    </PreferenceCategory>
</PreferenceScreen>